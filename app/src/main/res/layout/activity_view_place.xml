<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext=".ViewPlaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/viewplace_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_image_black_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewplace_placename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Place name"/>

        <TextView
            android:id="@+id/viewplace_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="italic"
            android:text="Address name"/>

        <TextView
            android:id="@+id/viewplace_openhours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Open now:"/>
        <RatingBar
            android:id="@+id/viewplace_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:theme="@style/RatingBar"/>
        <Button
            android:id="@+id/viewplace_btn_showmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_orange"
            android:text="Show on map"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/viewplace_btn_add_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_orange"
            android:text="Add to favourites"
            android:layout_margin="10dp"/>
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>